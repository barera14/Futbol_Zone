<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bd_futbolzone</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="Modelos/Cliente.hbm.xml"/>
    <mapping resource="Modelos/SAdministrador.hbm.xml"/>
    <mapping resource="Modelos/Campeonatos.hbm.xml"/>
    <mapping resource="Modelos/Jugadores.hbm.xml"/>
    <mapping resource="Modelos/Usuarios.hbm.xml"/>
    <mapping resource="Modelos/Equipo.hbm.xml"/>
    <mapping resource="Modelos/Alquiler.hbm.xml"/>
    <mapping resource="Modelos/Partido.hbm.xml"/>
    <mapping resource="Modelos/Cancha.hbm.xml"/>
    <mapping resource="Modelos/Establecimiento.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
